{
  "designSystem": {
    "name": "MentorAI Quiz Bot Design System",
    "version": "2.0",
    "platform": "Discord Embed",
    "description": "Clean, consistent, and modern quiz interface design system"
  },

  "colorPalette": {
    "primary": {
      "brand": "#5865F2",
      "brandHover": "#4752C4",
      "brandLight": "#7289DA",
      "accent": "#00D4AA",
      "accentHover": "#00B894"
    },
    "background": {
      "embedPrimary": "#2B2D31",
      "embedSecondary": "#1E1F22",
      "embedTertiary": "#232428",
      "cardSurface": "#313338",
      "cardSurfaceHover": "#3A3C42",
      "inputField": "#1E1F22"
    },
    "text": {
      "primary": "#FFFFFF",
      "secondary": "#B5BAC1",
      "muted": "#949BA4",
      "disabled": "#6D6F78",
      "link": "#00AFF4",
      "success": "#23A559",
      "warning": "#F0B132",
      "error": "#F23F43"
