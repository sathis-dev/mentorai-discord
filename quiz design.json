    "difficulty": {
      "easy": {
        "badge": "#23A559",
        "badgeBackground": "rgba(35, 165, 89, 0.2)",
        "glow": "0 0 12px rgba(35, 165, 89, 0.4)"
      },
      "medium": {
        "badge": "#F0B132",
        "badgeBackground": "rgba(240, 177, 50, 0.2)",
        "glow": "0 0 12px rgba(240, 177, 50, 0.4)"
      },
      "hard": {
        "badge": "#F23F43",
        "badgeBackground": "rgba(242, 63, 67, 0.2)",
        "glow": "0 0 12px rgba(242, 63, 67, 0.4)"
      }
    },
    "answerOptions": {
      "A": {
        "primary": "#5865F2",
        "background": "rgba(88, 101, 242, 0.15)",
        "border": "rgba(88, 101, 242, 0.5)",
        "hover": "rgba(88, 101, 242, 0.25)"
      },
      "B": {
        "primary": "#00D4AA",
        "background": "rgba(0, 212, 170, 0.15)",
        "border": "rgba(0, 212, 170, 0.5)",
        "hover": "rgba(0, 212, 170, 0.25)"
      },
      "C": {
        "primary": "#F0B132",
        "background": "rgba(240, 177, 50, 0.15)",
        "border": "rgba(240, 177, 50, 0.5)",
        "hover": "rgba(240, 177, 50, 0.25)"
      },
      "D": {
        "primary": "#EB459E",
        "background": "rgba(235, 69, 158, 0.15)",
        "border": "rgba(235, 69, 158, 0.5)",
        "hover": "rgba(235, 69, 158, 0.25)"
      }
    }
  },

  "typography": {
    "fontFamily": {
      "primary": "gg sans, Noto Sans, Helvetica Neue, Helvetica, Arial, sans-serif",
      "mono": "Consolas, Monaco, monospace"
    },
    "sizes": {
      "xs": "11px",
      "sm": "13px",
      "base": "15px",
      "lg": "17px",
      "xl": "20px",
      "2xl": "24px"
    },
    "weights": {
      "regular": 400,
      "medium": 500,
      "semibold": 600,
      "bold": 700
    },
    "lineHeight": {
      "tight": 1.2,
      "normal": 1.4,
      "relaxed": 1.6
    },
    "hierarchy": {
      "embedTitle": {
        "size": "17px",
        "weight": 600,
        "color": "#FFFFFF",
        "letterSpacing": "0.02em"
      },
      "questionText": {
        "size": "15px",
        "weight": 500,
        "color": "#FFFFFF",
        "letterSpacing": "normal"
      },
      "answerText": {
        "size": "14px",
        "weight": 400,
        "color": "#B5BAC1",
        "letterSpacing": "normal"
      },
      "metaText": {
        "size": "12px",
        "weight": 500,
        "color": "#949BA4",
        "letterSpacing": "0.02em",
        "textTransform": "uppercase"
      },
      "badgeText": {
        "size": "11px",
        "weight": 600,
        "color": "inherit",
        "letterSpacing": "0.04em",
        "textTransform": "uppercase"
      }
    }
  },

  "spacing": {
