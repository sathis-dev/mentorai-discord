    "scale": {
      "xs": "4px",
      "sm": "8px",
      "md": "12px",
      "lg": "16px",
      "xl": "20px",
      "2xl": "24px",
      "3xl": "32px"
    },
    "embedPadding": "16px",
    "cardPadding": "12px",
    "componentGap": "12px",
    "sectionGap": "16px"
  },

  "borderRadius": {
    "none": "0px",
    "sm": "4px",
    "md": "8px",
    "lg": "12px",
    "xl": "16px",
    "full": "9999px",
    "components": {
      "embed": "8px",
      "card": "8px",
      "button": "4px",
      "badge": "4px",
      "answerOption": "6px",
      "progressBar": "4px",
      "avatar": "50%"
    }
  },

  "shadows": {
    "none": "none",
    "sm": "0 1px 2px rgba(0, 0, 0, 0.2)",
    "md": "0 2px 8px rgba(0, 0, 0, 0.25)",
    "lg": "0 4px 16px rgba(0, 0, 0, 0.3)",
    "xl": "0 8px 24px rgba(0, 0, 0, 0.35)",
    "glow": {
      "primary": "0 0 16px rgba(88, 101, 242, 0.4)",
      "success": "0 0 12px rgba(35, 165, 89, 0.4)",
      "warning": "0 0 12px rgba(240, 177, 50, 0.4)",
      "error": "0 0 12px rgba(242, 63, 67, 0.4)"
    },
    "components": {
      "embed": "0 2px 10px rgba(0, 0, 0, 0.2)",
      "card": "0 1px 4px rgba(0, 0, 0, 0.15)",
      "buttonHover": "0 2px 8px rgba(88, 101, 242, 0.3)",
      "dropdown": "0 4px 12px rgba(0, 0, 0, 0.3)"
    }
  },

  "borders": {
    "width": {
      "thin": "1px",
      "medium": "2px",
      "thick": "3px"
    },
    "style": "solid",
    "colors": {
      "default": "#3F4147",
      "subtle": "#2D2F34",
      "accent": "#5865F2",
      "success": "#23A559",
      "warning": "#F0B132",
      "error": "#F23F43"
    },
    "components": {
      "embed": {
        "left": "4px solid #5865F2",
        "radius": "8px"
      },
      "card": {
        "border": "1px solid #3F4147",
        "radius": "8px"
      },
      "answerOption": {
        "border": "2px solid transparent",
        "selectedBorder": "2px solid currentColor",
        "radius": "6px"
      },
      "button": {
        "border": "none",
        "radius": "4px"
      }
    }
  },

  "components": {
    "embedContainer": {
      "description": "Main Discord embed wrapper",
      "styling": {
        "background": "#2B2D31",
        "borderLeft": "4px solid #5865F2",
        "borderRadius": "8px",
        "padding": "16px",
        "maxWidth": "520px",
        "shadow": "0 2px 10px rgba(0, 0, 0, 0.2)"
      },
      "DO_NOT": [
        "DO NOT add gradients to embed background",
        "DO NOT use border on all sides - only left accent border",
        "DO NOT exceed Discord's embed width limits"
      ]
    },

    "header": {
      "topicBadge": {
        "description": "Category/topic indicator (e.g., 'react', 'javascript')",
        "styling": {
          "background": "rgba(88, 101, 242, 0.15)",
          "border": "1px solid rgba(88, 101, 242, 0.3)",
          "borderRadius": "4px",
          "padding": "4px 10px",
          "color": "#7289DA",
          "fontSize": "13px",
          "fontWeight": 600,
          "display": "inline-flex",
          "alignItems": "center",
          "gap": "6px"
        },
        "icon": {
          "size": "14px",
          "color": "#5865F2"
        }
      },
      "metaRow": {
        "description": "Difficulty, question number, XP display",
        "styling": {
          "display": "flex",
          "alignItems": "center",
          "gap": "8px",
          "marginTop": "12px",
          "flexWrap": "wrap"
        }
      },
      "difficultyBadge": {
        "styling": {
          "padding": "3px 8px",
          "borderRadius": "4px",
          "fontSize": "11px",
          "fontWeight": 600,
          "textTransform": "uppercase",
          "letterSpacing": "0.04em"
        },
        "variants": {
          "easy": {
            "background": "rgba(35, 165, 89, 0.2)",
            "color": "#23A559",
            "dotColor": "#23A559"
          },
          "medium": {
            "background": "rgba(240, 177, 50, 0.2)",
            "color": "#F0B132",
            "dotColor": "#F0B132"
          },
          "hard": {
            "background": "rgba(242, 63, 67, 0.2)",
            "color": "#F23F43",
            "dotColor": "#F23F43"
          }
        }
      },
      "progressIndicator": {
        "description": "Question X/Y counter",
        "styling": {
          "color": "#B5BAC1",
          "fontSize": "13px",
          "fontWeight": 500
        }
      },
      "xpBadge": {
        "styling": {
          "background": "rgba(0, 212, 170, 0.15)",
          "color": "#00D4AA",
          "padding": "3px 8px",
          "borderRadius": "4px",
          "fontSize": "12px",
          "fontWeight": 600
        }
      }
    },

    "questionSection": {
      "container": {
        "styling": {
          "marginTop": "16px",
          "marginBottom": "16px"
        }
      },
      "questionMark": {
        "description": "Visual question indicator",
        "styling": {
          "color": "#5865F2",
          "fontSize": "14px",
          "fontWeight": 700,
          "marginRight": "6px"
        }
      },
      "questionText": {
        "styling": {
          "color": "#FFFFFF",
          "fontSize": "15px",
          "fontWeight": 500,
          "lineHeight": 1.5
        }
      }
    },

    "answerOptions": {
      "description": "CRITICAL: Unified, consistent answer option styling",
      "container": {
        "styling": {
          "display": "flex",
          "flexDirection": "column",
          "gap": "8px",
          "marginTop": "12px"
        }
      },
      "optionCard": {
        "base": {
          "styling": {
            "display": "flex",
            "alignItems": "center",
            "gap": "12px",
            "padding": "10px 14px",
            "borderRadius": "6px",
            "cursor": "pointer",
            "transition": "all 0.2s ease"
          }
        },
        "states": {
          "default": {
            "background": "#313338",
            "border": "1px solid #3F4147"
          },
          "hover": {
            "background": "#3A3C42",
            "border": "1px solid #4F545C",
            "transform": "translateX(2px)"
          },
          "selected": {
            "border": "2px solid currentColor",
            "background": "currentBackgroundColor"
          },
          "correct": {
            "background": "rgba(35, 165, 89, 0.15)",
            "border": "2px solid #23A559"
          },
          "incorrect": {
            "background": "rgba(242, 63, 67, 0.15)",
            "border": "2px solid #F23F43"
          },
          "disabled": {
            "opacity": 0.5,
            "cursor": "not-allowed"
          }
        }
      },
      "letterIndicator": {
        "description": "UNIFIED letter badges - A, B, C, D must all be consistent shape/size",
        "styling": {
          "width": "28px",
          "height": "28px",
          "borderRadius": "6px",
          "display": "flex",
          "alignItems": "center",
          "justifyContent": "center",
          "fontSize": "13px",
          "fontWeight": 700,
          "flexShrink": 0
        },
        "variants": {
          "A": {
            "background": "rgba(88, 101, 242, 0.2)",
            "color": "#5865F2",
            "border": "2px solid rgba(88, 101, 242, 0.4)"
          },
          "B": {
            "background": "rgba(0, 212, 170, 0.2)",
            "color": "#00D4AA",
            "border": "2px solid rgba(0, 212, 170, 0.4)"
          },
          "C": {
            "background": "rgba(240, 177, 50, 0.2)",
            "color": "#F0B132",
            "border": "2px solid rgba(240, 177, 50, 0.4)"
          },
          "D": {
            "background": "rgba(235, 69, 158, 0.2)",
            "color": "#EB459E",
            "border": "2px solid rgba(235, 69, 158, 0.4)"
          }
        },
        "DO_NOT": [
          "DO NOT use emoji characters for A, B, C, D - use styled text",
          "DO NOT make letter indicators different sizes",
          "DO NOT use inconsistent border-radius between options",
          "DO NOT use different shapes for different letters"
        ]
      },
      "answerText": {
        "styling": {
          "color": "#DCDDDE",
          "fontSize": "14px",
          "fontWeight": 400,
          "flex": 1
        }
      },
      "percentageIndicator": {
        "description": "Shows vote percentage after answering",
        "styling": {
          "color": "#949BA4",
          "fontSize": "12px",
          "fontWeight": 500,
          "marginLeft": "auto"
        }
      }
    },

    "progressBar": {
      "description": "Visual progress through quiz",
      "container": {
        "styling": {
          "width": "100%",
          "height": "4px",
          "background": "#1E1F22",
          "borderRadius": "4px",
          "marginTop": "16px",
          "overflow": "hidden"
        }
      },
      "fill": {
        "styling": {
          "height": "100%",
          "background": "linear-gradient(90deg, #5865F2 0%, #00D4AA 100%)",
          "borderRadius": "4px",
          "transition": "width 0.3s ease"
        }
      }
    },

    "actionButtons": {
      "container": {
        "styling": {
          "display": "flex",
          "gap": "8px",
          "marginTop": "16px",
          "flexWrap": "wrap"
        }
      },
      "answerButton": {
        "description": "A, B, C, D selection buttons",
        "base": {
          "styling": {
            "minWidth": "44px",
            "height": "36px",
            "padding": "0 16px",
            "borderRadius": "4px",
            "fontSize": "14px",
            "fontWeight": 600,
            "border": "none",
            "cursor": "pointer",
            "transition": "all 0.15s ease"
          }
        },
        "variants": {
          "A": {
            "default": {
              "background": "#5865F2",
              "color": "#FFFFFF"
            },
            "hover": {
              "background": "#4752C4",
              "shadow": "0 2px 8px rgba(88, 101, 242, 0.4)"
            }
          },
          "B": {
            "default": {
              "background": "#00D4AA",
              "color": "#FFFFFF"
            },
            "hover": {
              "background": "#00B894",
              "shadow": "0 2px 8px rgba(0, 212, 170, 0.4)"
            }
          },
          "C": {
            "default": {
              "background": "#F0B132",
              "color": "#1E1F22"
            },
            "hover": {
              "background": "#D9A02E",
              "shadow": "0 2px 8px rgba(240, 177, 50, 0.4)"
            }
          },
          "D": {
            "default": {
              "background": "#EB459E",
              "color": "#FFFFFF"
            },
            "hover": {
              "background": "#D03A8C",
              "shadow": "0 2px 8px rgba(235, 69, 158, 0.4)"
            }
          }
        }
      },
      "utilityButton": {
        "hint": {
          "default": {
            "background": "#313338",
            "color": "#B5BAC1",
            "border": "1px solid #3F4147"
          },
          "hover": {
            "background": "#3A3C42",
            "color": "#FFFFFF",
            "border": "1px solid #4F545C"
          },
          "icon": {
            "name": "lightbulb",
            "size": "16px",
            "color": "#F0B132"
          }
        },
        "fiftyFifty": {
          "default": {
            "background": "#313338",
            "color": "#B5BAC1",
            "border": "1px solid #3F4147"
          },
          "hover": {
            "background": "#3A3C42",
            "color": "#FFFFFF"
          },
          "styling": {
            "display": "flex",
            "alignItems": "center",
            "gap": "6px"
          }
        },
        "cancel": {
          "default": {
            "background": "rgba(242, 63, 67, 0.15)",
            "color": "#F23F43",
            "border": "1px solid rgba(242, 63, 67, 0.3)"
          },
          "hover": {
            "background": "rgba(242, 63, 67, 0.25)",
            "border": "1px solid rgba(242, 63, 67, 0.5)"
          }
        }
      }
    },

    "footer": {
      "styling": {
        "marginTop": "12px",
        "paddingTop": "12px",
        "borderTop": "1px solid #3F4147"
      },
      "instructionText": {
        "styling": {
          "color": "#949BA4",
          "fontSize": "12px",
          "fontWeight": 400
        }
      },
      "timestamp": {
        "styling": {
          "color": "#6D6F78",
          "fontSize": "11px"
        }
      }
    },

    "loadingState": {
      "description": "Shown while quiz is generating",
      "container": {
        "styling": {
          "display": "flex",
          "flexDirection": "column",
          "alignItems": "center",
          "justifyContent": "center",
          "padding": "24px",
          "gap": "12px"
        }
      },
      "spinner": {
        "styling": {
          "width": "32px",
          "height": "32px",
          "border": "3px solid #313338",
          "borderTop": "3px solid #5865F2",
          "borderRadius": "50%",
          "animation": "spin 1s linear infinite"
        }
      },
      "loadingText": {
        "styling": {
          "color": "#B5BAC1",
          "fontSize": "14px"
        }
      },
      "progressDots": {
        "styling": {
          "display": "flex",
          "gap": "6px"
        },
        "dot": {
          "size": "8px",
          "color": "#5865F2",
          "animation": "pulse 1.5s ease-in-out infinite"
        }
      }
    },

    "resultStates": {
      "correct": {
        "container": {
          "styling": {
            "background": "rgba(35, 165, 89, 0.1)",
            "border": "1px solid rgba(35, 165, 89, 0.3)",
            "borderRadius": "8px",
            "padding": "12px"
          }
        },
        "icon": {
          "name": "checkmark-circle",
          "color": "#23A559",
          "size": "24px"
        },
        "text": {
          "color": "#23A559",
          "fontWeight": 600
        }
      },
      "incorrect": {
        "container": {
          "styling": {
            "background": "rgba(242, 63, 67, 0.1)",
            "border": "1px solid rgba(242, 63, 67, 0.3)",
            "borderRadius": "8px",
            "padding": "12px"
          }
        },
        "icon": {
          "name": "x-circle",
          "color": "#F23F43",
          "size": "24px"
        },
        "text": {
          "color": "#F23F43",
          "fontWeight": 600
        }
      },
      "timeUp": {
        "container": {
          "styling": {
            "background": "rgba(240, 177, 50, 0.1)",
            "border": "1px solid rgba(240, 177, 50, 0.3)",
            "borderRadius": "8px",
            "padding": "12px"
          }
        },
        "icon": {
          "name": "clock",
          "color": "#F0B132",
          "size": "24px"
        }
      }
    }
  },

  "animations": {
    "transitions": {
      "fast": "0.1s ease",
      "normal": "0.2s ease",
      "slow": "0.3s ease"
    },
    "keyframes": {
      "spin": {
        "from": { "transform": "rotate(0deg)" },
        "to": { "transform": "rotate(360deg)" }
      },
      "pulse": {
        "0%, 100%": { "opacity": 0.4 },
        "50%": { "opacity": 1 }
      },
      "slideIn": {
        "from": { "opacity": 0, "transform": "translateY(-10px)" },
        "to": { "opacity": 1, "transform": "translateY(0)" }
      },
      "shake": {
        "0%, 100%": { "transform": "translateX(0)" },
        "25%": { "transform": "translateX(-5px)" },
        "75%": { "transform": "translateX(5px)" }
      }
    },
    "usage": {
      "optionHover": "transform 0.15s ease, background 0.15s ease",
      "buttonPress": "transform 0.1s ease",
      "resultReveal": "opacity 0.3s ease, transform 0.3s ease",
      "progressFill": "width 0.5s ease-out"
    }
  },

  "iconography": {
    "library": "Lucide or similar",
    "defaultSize": "18px",
    "strokeWidth": "2px",
    "icons": {
      "topic": {
        "react": "‚öõÔ∏è or atom icon",
        "javascript": "JS badge",
        "python": "üêç or snake icon",
        "general": "üìö or book icon"
      },
      "actions": {
        "hint": "üí° lightbulb",
        "fiftyFifty": "‚úÇÔ∏è scissors",
        "cancel": "‚úï x-mark",
        "timer": "‚è±Ô∏è stopwatch",
        "streak": "üî• fire"
      },
      "results": {
        "correct": "‚úì checkmark",
        "incorrect": "‚úï x-mark",
        "timeout": "‚è∞ alarm"
      }
    },
    "styling": {
      "default": {
        "color": "inherit",
        "opacity": 1
      },
      "muted": {
        "color": "#949BA4",
        "opacity": 0.8
      }
    }
  },

  "globalRules": {
    "DO_NOT_APPLY": [
      {
        "rule": "DO NOT use emoji letters (üÖ∞Ô∏è, üÖ±Ô∏è, etc.) for answer options",
        "reason": "Inconsistent rendering across platforms, use styled text instead",
        "alternative": "Use CSS-styled text letters with consistent backgrounds"
      },
      {
        "rule": "DO NOT apply gradients to text elements",
        "reason": "Poor readability, Discord embed limitations",
        "alternative": "Use solid colors from the palette"
      },
      {
        "rule": "DO NOT use different shapes for answer indicators",
        "reason": "Creates visual inconsistency",
        "alternative": "All answer indicators must be same size/shape rounded squares"
      },
      {
        "rule": "DO NOT exceed Discord embed limits",
        "reason": "Content will be truncated or rejected",
        "limits": {
          "titleLength": 256,
          "descriptionLength": 4096,
          "fieldCount": 25,
          "fieldNameLength": 256,
          "fieldValueLength": 1024,
          "embedTotal": 6000
        }
      },
      {
